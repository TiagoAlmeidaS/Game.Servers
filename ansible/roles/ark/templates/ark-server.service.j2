[Unit]
Description=ARK: Survival Evolved Dedicated Server
After=network.target

[Service]
Type=simple
User=gameserver
Group=gameserver
WorkingDirectory={{ ark_server_path }}
ExecStart={{ ark_server_path }}/start_server.sh
Restart=always
RestartSec=10
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
