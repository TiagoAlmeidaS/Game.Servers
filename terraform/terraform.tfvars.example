# Exemplo de configuração para o Game.Servers
# Copie este arquivo para terraform.tfvars e configure suas credenciais

# ===========================================
# CREDENCIAIS (OBRIGATÓRIO)
# ===========================================
do_token = "seu-token-do-digitalocean"
ssh_key_id = "seu-ssh-key-id"

# ===========================================
# CONFIGURAÇÃO DO SERVIDOR
# ===========================================
server_name = "MeuServidorSotF"
game_type = "sotf"  # sotf, minecraft, valheim, rust, ark
server_password = "minha-senha-segura"
max_players = 8

# ===========================================
# CONFIGURAÇÃO DA INFRAESTRUTURA
# ===========================================
environment = "dev"  # dev, staging, prod
region = "nyc3"      # nyc1, nyc3, sfo3, sgp1, fra1, etc.
instance_size = "s-2vcpu-8gb"  # s-1vcpu-2gb, s-2vcpu-4gb, s-2vcpu-8gb, etc.

