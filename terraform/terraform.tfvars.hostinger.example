# Exemplo de configuração para Hostinger VPS
# Copie este arquivo para terraform.tfvars e configure suas credenciais

# ===========================================
# CREDENCIAIS HOSTINGER (OBRIGATÓRIO)
# ===========================================
hostinger_api_key = "sua-api-key-da-hostinger"
ssh_key_id = "seu-ssh-key-id"

# ===========================================
# CONFIGURAÇÃO DO SERVIDOR
# ===========================================
server_name = "MeuServidorSotF"
game_type = "sotf"  # sotf, minecraft, valheim, rust, ark
server_password = "minha-senha-segura"
max_players = 8

# ===========================================
# CONFIGURAÇÃO DA INFRAESTRUTURA HOSTINGER
# ===========================================
provider = "hostinger"
environment = "dev"  # dev, staging, prod
region = "amsterdam"  # amsterdam, london, frankfurt, newyork, losangeles, singapore, tokyo
instance_size = "vps-2"  # vps-1, vps-2, vps-3, vps-4, vps-5

