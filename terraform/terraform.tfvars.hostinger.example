# ===========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ===========================================

# Email para alertas
# alert_email = "admin@exemplo.com"

# Slack webhook para notificações
# slack_webhook = "https://hooks.slack.com/services/..."

# Discord webhook para notificações
# discord_webhook = "https://discord.com/api/webhooks/..."

# ===========================================
# CONFIGURAÇÕES DE BACKUP
# ===========================================

# Frequência de backup (em horas)
# backup_interval = 24

# Retenção de backups (em dias)
# backup_retention = 7

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================

# Habilitar whitelist (Minecraft)
# minecraft_whitelist = false

# Modo online (Minecraft)
# minecraft_online_mode = true

# Habilitar PvP (SotF, Valheim, Rust, ARK)
# enable_pvp = true

# Habilitar cheats (SotF, Valheim, Rust, ARK)
# enable_cheats = false

# ===========================================
# CONFIGURAÇÕES DE PERFORMANCE
# ===========================================

# Configurações de Java (Minecraft)
# minecraft_java_opts = "-Xmx2G -Xms1G -XX:+UseG1GC"

# Limite de memória do systemd
# minecraft_memory_limit = "3G"

# Configurações de rede
# network_compression_threshold = 256

# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================

# Habilitar debug
# debug = false

# Log level
# log_level = "INFO"

# Habilitar métricas detalhadas
# detailed_metrics = false

